<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/segmentor_activity_java_surface_view"
        opencv:show_fps="true"
        opencv:camera_id="any" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ui_layout"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_width="39dip"
            android:layout_height="41dip"
            android:background="@drawable/face"
            android:alpha="0.9"
            android:id="@+id/facebutton"
            >
        </ImageButton>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:background="@drawable/bg"
            android:alpha="0.9"
            android:id="@+id/bgbutton"
            >
        </ImageButton>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:src="@drawable/record"
            android:alpha="0.7"
            android:background="@android:color/transparent"
            android:id="@+id/snapbutton"
            >
        </ImageButton>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="108dp"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/unmute"
            android:alpha="0.65"
            android:id="@+id/mutebutton"
            >
        </ImageButton>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="98dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="105dip"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="@drawable/switch_camera"
            android:alpha="0.65"
            android:id="@+id/switchcambutton"
            >
        </ImageButton>
    </RelativeLayout>
</FrameLayout>
